# Typical site settings test data.

[serve]
# List of sites to serve. Unlisted sites will be ignored.
sites = site1, site2

[DEFAULT]
# Other options for all sites
theme = blue_templates

[site1]
public_name = Site 1
source_dir  = /tmp/data/site1
dest_dir    = /tmp/generated/site1

[site2]
public_name = Site 2
source_dir  = /tmp/data/site2
dest_dir    = /tmp/generated/site2

# site3 is defined here but not in DEFAULT>sites so it won't be served
[site3]
public_name = Site 3
source_dir  = /tmp/data/site3
dest_dir    = /tmp/generated/site3
