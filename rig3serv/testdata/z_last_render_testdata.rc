[serve]
sites = test_default, test_magic

[DEFAULT]
sources1    = dir: album/blog1, file: album/blog1, blog: album/blog1, rig_base: http://rig.base.url/photos1/index.php
sources2    = dir: album/blog2, file: album/blog2, blog: album/blog2, rig_base: http://rig.base.url/photos2/index.php
base_url     =
template_dir = templates
cat_filter   = !exclude-me
tracking_code = <i>tracking code here</i>
toc_categories = bar
reverse_categories = bar
# same cache base dir can be used if sites have different public_names
cache_dir   = test_cache

[test_default]
theme = default
public_name = Test Default
dest_dir    = test_dest/default

[test_magic]
theme = magic
public_name = Test Magic
dest_dir    = test_dest/magic
